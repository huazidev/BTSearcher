<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huazidev.btsearcher.ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_search_bg"
        android:paddingRight="35dp"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="search"
        app:searchIcon="@null"
        app:showDividers="none"/>

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/main_search_icon_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:src="@drawable/ic_search_holo_light"
        app:layout_constraintBottom_toBottomOf="@+id/search_view"
        app:layout_constraintRight_toRightOf="@+id/search_view"
        app:layout_constraintTop_toTopOf="@+id/search_view"/>

</android.support.constraint.ConstraintLayout>
